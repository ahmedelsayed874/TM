<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blogspot.gm4s1.tmgm4s.fragments.SetTimeFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!--<TimePicker-->
        <!--android:id="@+id/fragment_setTime_timePicker"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:gravity="center"
        android:background="@color/task_header_background"
        android:text="Start Time"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_2"
        android:layout_marginTop="30dp"
        android:text="HOUR"/>
    <Spinner
        android:id="@+id/fragment_setTime_spinner_hour"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/margin_2"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_2"
        android:layout_marginTop="30dp"
        android:text="MINUTE"/>
    <Spinner
        android:id="@+id/fragment_setTime_spinner_minute"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/margin_2"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_2"
        android:layout_marginTop="30dp"
        android:text="PERIOD"/>

    <Spinner
        android:id="@+id/fragment_setTime_spinner_dayperiod"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/margin_2"
        android:textAlignment="center"/>


</LinearLayout>
